@model Disquera.Modelos.Cancion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cancion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_cancion" class="control-label"></label>
                <input asp-for="id_cancion" class="form-control" readonly="true" />
                <span asp-validation-for="id_cancion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reproducciones" class="control-label"></label>
                <input asp-for="reproducciones" class="form-control" />
                <span asp-validation-for="reproducciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="genero" class="control-label"></label>
                <input asp-for="genero" class="form-control" />
                <span asp-validation-for="genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autorid_autor" class="control-label"></label>

                <select asp-for=Autorid_autor asp-items="@ViewBag.ListaAutores">
                    <option selected="selected" value="">--Elija el Autor--</option>
                </select>

                <span asp-validation-for="Autorid_autor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
